<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.studentlist.viewmodel.StudentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <EditText
            android:id="@+id/etMssv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập MSSV (Không thể sửa khi cập nhật)"
            android:text="@={viewModel.mssv}"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập Tên"
            android:layout_marginTop="12dp"
            android:text="@={viewModel.name}"
            app:layout_constraintTop_toBottomOf="@id/etMssv" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập Số điện thoại"
            android:layout_marginTop="12dp"
            android:inputType="phone"
            android:text="@={viewModel.sdt}"
            app:layout_constraintTop_toBottomOf="@id/etName" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập Địa chỉ"
            android:layout_marginTop="12dp"
            android:text="@={viewModel.diachi}"
            app:layout_constraintTop_toBottomOf="@id/etPhone" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu Thông Tin"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/etAddress"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:layout_constraintTop_toBottomOf="@id/etAddress"
            app:layout_constraintStart_toEndOf="@id/btnSave" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>