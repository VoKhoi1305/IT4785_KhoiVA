<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chuyển Đổi Tiền Tệ"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Card tiền tệ nguồn -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFrom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewFromLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Từ"
                android:textSize="14sp"
                android:textColor="#757575"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <Spinner
                android:id="@+id/spinnerFromCurrency"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@android:drawable/btn_dropdown"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/textViewFromLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/editTextFromAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Nhập số tiền"
                android:inputType="numberDecimal"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="@null"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/spinnerFromCurrency"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Icon Swap -->
    <ImageView
        android:id="@+id/imageViewSwap"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_swap"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardViewFrom"
        app:layout_constraintBottom_toTopOf="@id/cardViewTo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Hoán đổi tiền tệ"/>

    <!-- Card tiền tệ đích -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewTo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewSwap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewToLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đến"
                android:textSize="14sp"
                android:textColor="#757575"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <Spinner
                android:id="@+id/spinnerToCurrency"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@android:drawable/btn_dropdown"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/textViewToLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/editTextToAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Kết quả"
                android:inputType="numberDecimal"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:background="@null"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/spinnerToCurrency"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Thông tin tỷ giá -->
    <TextView
        android:id="@+id/textViewExchangeRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tỷ giá: 1 USD = 24,000 VND"
        android:textSize="14sp"
        android:textColor="#757575"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardViewTo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Footer info -->
    <TextView
        android:id="@+id/textViewFooter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tỷ giá cập nhật: 10/11/2025"
        android:textSize="12sp"
        android:textColor="#9E9E9E"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>